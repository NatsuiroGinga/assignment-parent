<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="top.ottofans.assignment_3.entity.Department" table="sa_department" schema="ssh_assignment">
        <id name="id">
            <column name="id" sql-type="int(10)"/>
        </id>
        <property name="departmentName">
            <column name="department_name" sql-type="varchar(64)" length="64" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>